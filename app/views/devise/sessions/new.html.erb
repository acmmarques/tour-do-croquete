<div class="container mt-3">
  <div class="page-container">
    <div class="form-container">
      <h2 class="text-4xl text-[#55AD9B] font-extrabold my-4">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email", class:"form-inputs-data" } %>
            <%= f.input :password,
              required: false,
              input_html: { autocomplete: "current-password", class:"form-inputs-data" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in",
              class: "my-2 button-actions"%>
          </div>
        <% end %>
        <div class="text-xs flex flex-column items-center	mt-2 leading-3	">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
